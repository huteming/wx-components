.c-cell::before {
  content: " ";
  position: absolute;
  top: 0;
  left: 15px;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.c-cell {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  min-height: 45px;
}

.c-cell__bd {
  padding-left: 15px;
  width: 360rpx;
  box-sizing: border-box;
}

.c-cell__ft {
  padding-right: 15px;
  width: 390rpx;
  justify-content: flex-end;
  text-align: right;
  box-sizing: border-box;
}

.c-cell__icon {
  min-width: 0;
}

.c-cell__label {
  color: #000;
}

.c-cell__value {
  color: #999;
}

.c-cell__link {
  position: relative;
  padding-right: 13px;
  box-sizing: border-box;
}

.c-cell__link::after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.c-cell-active {
  background-color: #ececec;
}

.c-cell-nowrap {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.c-cell-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

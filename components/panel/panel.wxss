.c-panel {
  position: relative;
  padding: 0 15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  min-height: 70px;
}

.c-panel::before {
  content: " ";
  position: absolute;
  top: 0;
  left: 15px;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #e5e5e5;
  color: #e5e5e5;
}

.c-panel__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-right: 0.3em;
  font-size: 50px;
  line-height: 1.4;
  text-align: center;
}

.c-panel__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.c-panel__title {
  font-weight: 400;
  font-size: 1em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.c-panel__desc {
  max-width: 500rpx;
  color: #999;
  font-size: .8em;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* display: -webkit-box; */
  /* -webkit-box-orient: vertical; */
  /* -webkit-line-clamp: 2; */
}

.c-panel_active {
  background-color: #ececec;
}

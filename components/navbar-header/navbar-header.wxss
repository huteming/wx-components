.c-navbar-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  /* position: absolute; */
  position: relative;
  margin-bottom: 3px;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.c-navbar-header__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 8px 0;
  text-align: center;
  font-size: 0;
}

.c-navbar-header__item-active {
  color: #1aad19;
}

.c-navbar-header__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.c-navbar-header__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  /* width: 6em; */
  height: 3px;
  background-color: #1aad19;
  /* -webkit-transition: -webkit-transform 0.3s; */
  /* transition: -webkit-transform 0.3s; */
  /* transition: transform 0.3s, -webkit-transform 0.3s; */
}
